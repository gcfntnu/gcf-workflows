BFQ_INTERIM = join(INTERIM_DIR, 'rnaseq', 'bfq')
include:
    'bfq/bfq_level1.rules'
include:
    'bfq/bfq_level2.rules'
include:
    'bfq/bfq_level3.rules'
    
rule bfq_all:
    input:
        rules.bfq_level1_all.input,
        rules.bfq_level2_all.input

rule bfq_multiqc:
